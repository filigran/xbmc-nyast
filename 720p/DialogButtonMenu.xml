<window type="buttonMenu" id="111">
	<defaultcontrol always="true">3110</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<controls>

		<include>GlobalOverlay</include>

		<control type="group">
			<posx>440</posx>
			<posy>140</posy>

			<control type="image">
				<posx>-20</posx>
				<posy>-20</posy>
				<width>440</width>
				<height>496</height>
				<texture border="22">other_textures/ContentPanel.png</texture>
			</control>

			<control type="label">
				<include>DialogID</include>
				<label>DialogButtonMenu.xml</label>
			</control>

			<control type="grouplist" id="1">
				<posx>10</posx>
				<posy>40</posy>
				<width>380</width>
				<height>382</height>
				<itemgap>2</itemgap>
				<onleft>-</onleft>
				<onright>-</onright>
				<onup>1</onup>
				<ondown>1</ondown>
				<orientation>vertical</orientation>

				<control type="grouplist" id="3110">
                    <height>300</height>
                    <control type="button" id="3120">
						<description>Settings button</description>
						<width>380</width>
						<label>Settings</label>
						<onclick>ActivateWindow(Settings)</onclick>
					</control>
					<control type="button" id="3111">
						<description>Master mode button</description>
						<width>380</width>
						<label>20046</label>
						<altlabel>20045</altlabel>
						<onclick>xbmc.mastermode</onclick>
						<visible>System.HasLocks</visible>
					</control>

					<control type="button" id="3112">
						<description>LogOff Profile</description>
						<width>380</width>
						<include>SettingsLabel</include>
						<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
						<onclick>dialog.close(all,true)</onclick>
						<onclick>System.LogOff</onclick>
						<visible>System.HasLoginScreen</visible>
						<visible>System.Loggedon</visible>
					</control>

					<control type="button" id="3113">
						<description>Custom Shutdown Timer button</description>
						<width>380</width>
						<label>20151</label>
						<onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
						<visible>System.HasAlarm(shutdowntimer)</visible>
					</control>

					<control type="button" id="3114">
						<description>Custom Shutdown Timer button</description>
						<width>380</width>
						<label>20150</label>
						<onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
						<visible>!System.HasAlarm(shutdowntimer)</visible>
					</control>

					<control type="button" id="3115">
						<description>Shutdown</description>
						<width>380</width>
						<label>13005</label>
						<onclick>ShutDown()</onclick>
					</control>

					<control type="button" id="3116">
						<description>Suspend xbmc</description>
						<width>380</width>
						<label>13011</label>
						<onclick>XBMC.Suspend()</onclick>
					</control>

					<control type="button" id="3117">
						<description>Reboot button</description>
						<width>380</width>
						<label>13013</label>
						<onclick>XBMC.Reset()</onclick>
					</control>

					<control type="label" id="3118">
						<description>Alarm Time</description>
						<width>380</width>
						<align>center</align>
						<label>$LOCALIZE[20145] [B]$INFO[System.Alarmpos][/B]</label>
						<visible>System.HasAlarm(shutdowntimer)</visible>
					</control>

					<control type="button" id="3119">
						<description>Open Player Controls</description>
						<width>380</width>
						<label>31015</label>
						<onclick>ActivateWindow(playercontrols)</onclick>
						<visible>Player.HasMedia</visible>
					</control>

				</control>

			</control>

		</control>

		<include>Debug_Grid</include>

	</controls>

</window>