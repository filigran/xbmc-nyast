<includes>

	<include file="Defaults.xml" />
	<include file="View_50_List.xml" />
    <include file="View_51_New_list.xml" />

    <include name="Global_Menu">
        <control type="list" id="300">
            <posx>30</posx>
            <posy>100</posy>
            <width>291</width>
            <height>420</height>
            <scrolltime>200</scrolltime>
            <focusposition>1</focusposition>
            <onright>50</onright>
            <itemlayout width="291" height="70">
                <control type="image">
                    <posx>6</posx>
                    <posy>23</posy>
                    <width>26</width>
                    <height>26</height>
                    <texture>$INFO[Listitem.Icon]</texture>
                    <colordiffuse>ff4d4d4d</colordiffuse>
                </control>
                <control type="label">
                    <posx>49</posx>
                    <posy>22</posy>
                    <width>242</width>
                    <height>26</height>
                    <label>$INFO[Listitem.Label]</label>
                    <font>Myriad_Regular_Caps_24</font>
                    <textcolor>ff4d4d4d</textcolor>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>54</posy>
                    <width>291</width>
                    <height>16</height>
                    <texture>nyast/menu_bottom_line.png</texture>
                    <colordiffuse>ff4d4d4d</colordiffuse>
                </control>
            </itemlayout>
            <focusedlayout width="291" height="70">
                <control type="image">
                    <posx>6</posx>
                    <posy>23</posy>
                    <width>26</width>
                    <height>26</height>
                    <texture>$INFO[Listitem.Icon]</texture>
                    <colordiffuse>ff2b91b5</colordiffuse>
                    <visible>Control.HasFocus(300)</visible>
                </control>
                <control type="image">
                    <posx>6</posx>
                    <posy>23</posy>
                    <width>26</width>
                    <height>26</height>
                    <texture>$INFO[Listitem.Icon]</texture>
                    <colordiffuse>ff246b84</colordiffuse>
                    <visible>!Control.HasFocus(300)</visible>
                </control>
                <control type="label">
                    <posx>49</posx>
                    <posy>22</posy>
                    <width>242</width>
                    <height>26</height>
                    <label>$INFO[Listitem.Label]</label>
                    <font>Myriad_Regular_Caps_24</font>
                    <textcolor>white</textcolor>
                    <visible>Control.HasFocus(300)</visible>
                </control>
                <control type="label">
                    <posx>49</posx>
                    <posy>22</posy>
                    <width>242</width>
                    <height>26</height>
                    <label>$INFO[Listitem.Label]</label>
                    <font>Myriad_Regular_Caps_24</font>
                    <textcolor>ffa4a4a4</textcolor>
                    <visible>!Control.HasFocus(300)</visible>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>54</posy>
                    <width>291</width>
                    <height>16</height>
                    <texture>nyast/menu_bottom_line.png</texture>
                    <colordiffuse>ff2b91b5</colordiffuse>
                    <visible>Control.HasFocus(300)</visible>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>54</posy>
                    <width>291</width>
                    <height>16</height>
                    <texture>nyast/menu_bottom_line.png</texture>
                    <colordiffuse>ff246b84</colordiffuse>
                    <visible>!Control.HasFocus(300)</visible>
                </control>
            </focusedlayout>
            <content>
                <item id="1">
                    <label>Search</label>
                    <icon>nyast/icon_search.png</icon>
                    <onclick>ActivateWindow(MyWeather)</onclick>
                </item>
                <item id="2">
                    <label>Play disc</label>
                    <icon>nyast/icon_disc.png</icon>
                    <onclick>ActivateWindow(MyWeather)</onclick>
                </item>
                <item id="3">
                    <label>Movies</label>
                    <icon>nyast/icon_movies.png</icon>
                    <onclick>ActivateWindow(Videos,MovieTitles,return)</onclick>
                </item>
                <item id="4">
                    <label>TV Shows</label>
                    <icon>nyast/icon_tvshows.png</icon>
                    <onclick>ActivateWindow(Videos,TVShowTitles,return)</onclick>
                </item>
                <item id="4">
                    <label>Games</label>
                    <icon>nyast/icon_games.png</icon>
                    <onclick>ActivateWindow(MyWeather)</onclick>
                </item>
                <item id="4">
                    <label>Weather</label>
                    <icon>nyast/icon_weather.png</icon>
                    <onclick>ActivateWindow(MyWeather)</onclick>
                </item>
            </content>
        </control>
    </include>
	<include name="HiddenButton">
		<posx>-20</posx>
		<posy>-20</posy>
		<width>1</width>
		<height>1</height>
		<label>-</label>
		<texturenofocus>-</texturenofocus>
		<texturefocus>-</texturefocus>
	</include>

	<include name="DialogID">
		<posx>10</posx>
		<posy>10</posy>
		<width>520</width>
		<height>14</height>
		<textcolor>Red</textcolor>
		<shadowcolor>Black</shadowcolor>
		<align>left</align>
		<visible>!Skin.HasSetting(HideDebugInfo)</visible>
	</include>

	<include name="WindowID">
		<posx>10</posx>
		<posy>10</posy>
		<width>520</width>
		<height>14</height>
		<textcolor>Blue</textcolor>
		<shadowcolor>Black</shadowcolor>
		<align>left</align>
		<visible>!Skin.HasSetting(HideDebugInfo)</visible>
	</include>

	<include name="Dimensions_Fullscreen">
		<posx>0</posx>
		<posy>0</posy>
		<width>1280</width>
		<height>720</height>
	</include>

	<include name="Debug_Grid">
	
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<texture>debuggrid720.png</texture>
			<visible>Skin.HasSetting(DebugGrid)</visible>
		</control>
		
	</include>

	<include name="GlobalOverlay">

		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<texture border="2">other_textures/black-back.png</texture>
		</control>

	</include>

	<include name="GlobalBackground">

		<control type="group">
			<visible>!Player.HasMedia | [Player.HasAudio + Skin.HasSetting(NoBackgroundVisualiser)] | [Player.HasVideo + Skin.HasSetting(NoBackgroundVideo)]</visible>

			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<visible>[!IsEmpty(ListItem.foldername) + Container.Content(Movies)] | !Window.IsVisible(videolibrary)</visible>
			</control>
            <control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture background="true">other_textures/black-back.png</texture>
				<visible>[!IsEmpty(ListItem.foldername) + Container.Content(Movies)] | !Window.IsVisible(videolibrary)</visible>
			</control>
			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>
				<visible>!IsEmpty(ListItem.foldername) + [Container.Content(TVShows) | [Container.Content(Episodes) + stringcompare(Container.FolderPath,videodb://5/)]]</visible>
			</control>

			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<fadetime>800</fadetime>
				<texture background="true">$INFO[Fanart.Image]</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>
				<visible>!IsEmpty(ListItem.foldername) + [Container.Content(Seasons) | [Container.Content(Episodes) + !stringcompare(Container.FolderPath,videodb://5/)]]</visible>
			</control>

		</control>

		<control type="group">
			<visible>[Player.HasAudio + !Skin.HasSetting(NoBackgroundVisualiser)] | [Player.HasVideo + !Skin.HasSetting(NoBackgroundVideo)]</visible>

			<control type="visualisation">
				<include>Dimensions_Fullscreen</include>
				<visible>Player.HasAudio + !Skin.HasSetting(NoBackgroundVisualiser)</visible>
			</control>

			<control type="videowindow">
				<include>Dimensions_Fullscreen</include>
				<visible>Player.HasVideo + !Skin.HasSetting(NoBackgroundVideo)</visible>
			</control>

			<control type="image">
				<include>Dimensions_Fullscreen</include>
				<texture border="2">other_textures/black-back.png</texture>
			</control>

		</control>

	</include>

</includes>