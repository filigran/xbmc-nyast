	<controls>

		<control type="group">
			<posx>20</posx>
			<posy>674</posy>

			<control type="group">

				<visible>!VideoPlayer.IsFullscreen + !Window.IsVisible(screencalibration)</visible>

				<control type="image">
					<posx>-20</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>68</height>
					<texture border="22">other_textures/ContentPanel.png</texture>
				</control>

				<control type="label">
					<posy>-20</posy>
					<include>DialogID</include>
					<label>VideoOverlay.xml</label>
